@using RestaurantApplication.VarlikKatmani.Models
@model List<Satis>
@{
    ViewBag.Title = "Listele";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-image: url('/Images/restaurant1.jpg'); 
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            color: white;
        }

        .table-container {
            background-color: rgba(0, 0, 0, 0.7); 
            padding: 20px;
            border-radius: 10px;
        }

        .table th, .table td {
            color: white;
        }

        .btn-xs {
            font-size: 0.8em;
            padding: 0.25em 0.5em;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="table-container">
            <h2>Satış Listele</h2>
            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Tarih Saat</th>
                        <th>Toplam Tutar</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.TarihSaat</td>
                            <td>@item.ToplamTutar.ToString("C")</td>
                            <td>
                                <a href="@Url.Action("SatisDetay", new { id = item.Id })" class="btn btn-info btn-xs">Detay</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
