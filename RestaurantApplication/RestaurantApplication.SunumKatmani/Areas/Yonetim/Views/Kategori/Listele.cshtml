@using RestaurantApplication.VarlikKatmani.Models
@model List<Kategori>
@{
    ViewBag.Title = "Listele";
}
<div class="container mt-5">
    <div class="row">
        <div class="col text-center">
            <h2 class="mb-4 text-white">Kategorilerimiz</h2>
        </div>
    </div>

    <hr class="bg-light" />

    <div class="row">
        <div class="col text-right mb-3">
            <a href="@Url.Action("Ekle", "Kategori")" class="btn btn-success">Kategori Ekle</a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="table-responsive">
                <table class="table table-hover table-bordered table-dark">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Ad</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Ad</td>
                                <td>
                                    <a href="@Url.Action("Sil", "Kategori", new { id = item.Id })" class="btn btn-danger btn-sm mr-2">Sil</a>
                                    <a href="@Url.Action("Duzenle", "Kategori", new { id = item.Id })" class="btn btn-primary btn-sm">Güncelle</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: url('/Images/restaurant1.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .btn {
        border-radius: 20px;
    }

    .table {
        margin-bottom: 0;
    }

        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .text-white {
        color: #fff;
    }

    .bg-light {
        border-color: #f8f9fa !important;
    }
</style>
