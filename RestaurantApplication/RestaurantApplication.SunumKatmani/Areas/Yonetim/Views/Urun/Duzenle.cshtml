@using RestaurantApplication.VarlikKatmani.Models

@model Urun
@{
    ViewBag.Title = "Duzenle";
}
<div class="row">
    <div class="col-12">
        <h2>Ürün Güncelle</h2>
    </div>
</div>
<hr />
@using (Html.BeginForm("Duzenle", "Urun", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(x => x.Ad)
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Kategori)
        @Html.DropDownListFor(x => x.KategoriId, ViewBag.Kategoriler as SelectList, "Kategori Seçiniz", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Fiyat)
        @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control", @type = "number", @min = "0" })
    </div>

    <div class="form-group">
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a href="@Url.Action("Listele","Urun")" class="btn btn-secondary">İptal</a>
        </div>
    </div>

}
