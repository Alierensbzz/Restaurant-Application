@model RestaurantApplication.VarlikKatmani.Models.Urun
@{
    ViewBag.Title = "Ekle";
}

<h2>Yemek Ekle</h2>
<hr />

@using (Html.BeginForm("Ekle", "Urun", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken() <!-- bir doğrulama tokeni oluşturur ve kullanıcının oturumu ile ilişkilendirir.-->

    <div class="form-group">
        @Html.LabelFor(x => x.Ad)
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Kategori)
        @Html.DropDownListFor(x => x.KategoriId, ViewBag.Kategoriler as SelectList, "Kategori Seçiniz", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Fiyat)
        @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control", @type = "number", @min = "0", @value = "0" })
    </div>

    <div class="form-group">
        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a href="@Url.Action("Listele","Urun")" class="btn btn-secondary">İptal</a>
        </div>
    </div>
}
