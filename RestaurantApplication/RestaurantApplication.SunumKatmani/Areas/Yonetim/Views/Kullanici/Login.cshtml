@model RestaurantApplication.VarlikKatmani.Models.Kullanici
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <section class="bg-light p-3 p-md-4 p-xl-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-xxl-11">
                    <div class="card border-light-subtle shadow-sm">
                        <div class="row g-0">
                            <div class="col-12 col-md-6">
                                <img class="img-fluid rounded-start w-100 h-100 object-fit-cover" loading="lazy" src="~/Images/restaurant1.jpg" alt="AKE Restaurant">
                            </div>
                            <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                                <div class="col-12 col-lg-11 col-xl-10">
                                    <div class="card-body p-3 p-md-4 p-xl-5">
                                        <div class="row">
                                            <div class="col-12">
                                                <div class="mb-5">
                                                    <div class="text-center mb-4">
                                                        <p >AKE RESTAURANT</p>
                                                    </div>
                                                    <h4 class="text-center">AKE Restauranta Hoşgeldiniz!</h4>
                                                </div>
                                            </div>
                                        </div>
                                        @using (Html.BeginForm("Login", "Kullanici", FormMethod.Post, new { @class = "row gy-3 overflow-hidden" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3">
                                                        @Html.TextBoxFor(x => x.Eposta, new { @class = "form-control", placeholder = "name@example.com", type = "email" })
                                                        @Html.LabelFor(x => x.Eposta, "Email", new { @class = "form-label" })
                                                        @Html.ValidationMessageFor(x => x.Eposta, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-floating mb-3">
                                                        @Html.PasswordFor(x => x.Parola, new { @class = "form-control", placeholder = "Password" })
                                                        @Html.LabelFor(x => x.Parola, "Password", new { @class = "form-label" })
                                                        @Html.ValidationMessageFor(x => x.Parola, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button class="btn btn-dark btn-lg" type="submit">Giriş Yap</button>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
