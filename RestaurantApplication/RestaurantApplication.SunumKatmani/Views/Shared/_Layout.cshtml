<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - AKE Restaurant Hoşgeldiniz!</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand">AKE Restaurant</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                @if (Session["user"] != null && (Session["user"] as RestaurantApplication.VarlikKatmani.Models.Kullanici).Yetki == RestaurantApplication.VarlikKatmani.Enums.Yetki.Mudur)
                {
                    <li class="item"><a class="nav-link" href="@Url.Action("Listele", "Kullanici")">Kullanıcılar</a></li>
                    <li class="item"><a class="nav-link" href="@Url.Action("Listele", "Kategori")">Kategoriler</a></li>
                    <li class="item"><a class="nav-link" href="@Url.Action("Listele", "Satis")">Satışlar</a></li>
                    <li class="item"><a class="nav-link" href="@Url.Action("Listele", "Urun")">Yemekler</a></li>
                }
                else if (Session["user"] != null && (Session["user"] as RestaurantApplication.VarlikKatmani.Models.Kullanici).Yetki == RestaurantApplication.VarlikKatmani.Enums.Yetki.Personel)
                {
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Ekle", "Satis", new { area = "Yonetim"})">Satış Ekle</a></li>
                }
                @if (Session["user"] != null)
                {
                    <li class="item"><a class="nav-link" href="@Url.Action("Logout", "Kullanici")">Çıkış</a></li>
                }
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Düzce Universitesi/Ders Projesi</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.7.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>